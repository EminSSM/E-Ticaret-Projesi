@inject DataAccessLayer.DataContext deneme


<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <title>Teknoloji Dünyamıza Hoşgeldiniz</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/resim2.jpg" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&family=Roboto:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    <!-- Icon Font Stylesheet -->
 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="lib/flaticon/font/flaticon.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrapp.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/divisima/css/flaticon.css" />
    <link rel="stylesheet" href="/divisima/css/slicknav.min.css" />
    <link rel="stylesheet" href="/divisima/css/jquery-ui.min.css" />
    <link rel="stylesheet" href="/divisima/css/animate.css" />
    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/divisima/css/style.css" rel="stylesheet" />
</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid border-bottom d-none d-lg-block">
        <div class="row gx-0">
            <div class="col-lg-4 text-center py-2">
                <div class="d-inline-flex align-items-center">
                    <i class="bi bi-geo-alt fs-1 text-success me-3"></i>
                    <div class="text-start">
                        <h6 class="text-uppercase mb-1">Çalışma Yerimiz</h6>
                        <span>123. Sokak, Ataşehir, Istanbul</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-center border-start border-end py-2">
                <div class="d-inline-flex align-items-center">
                    <i class="bi bi-envelope-open fs-1 text-success me-3"></i>
                    <div class="text-start">
                        <h6 class="text-uppercase mb-1">Email Adresimiz</h6>
                        <span>info@example.com</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-center py-2">
                <div class="d-inline-flex align-items-center">
                    <i class="bi bi-phone-vibrate fs-1 text-success me-3"></i>
                    <div class="text-start">
                        <h6 class="text-uppercase mb-1">İletisim Numaramız</h6>
                        <span>+012 345 6789</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow-sm py-3 py-lg-0 px-3 px-lg-0">
        <a href="/" class="navbar-brand ms-lg-5">
          <h1 class="m-0 text-uppercase text-dark"><i class="fa-solid fa-computer text-success me-3"></i>Teknoloji Dünyası</h1>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto py-0">
                <a href="/" class="nav-item nav-link @(ViewBag.menuindex == 0 ? "active" : "")">Ana Sayfa</a>
                <a asp-controller="about" asp-action="index" class="nav-item nav-link @(ViewBag.menuindex == 1 ? "active" : "")">Hakkımızda</a>
                <div class="nav-item dropdown">
                    <a asp-controller="Menu" asp-action="Products" class="nav-link dropdown-toggle " data-bs-toggle="dropdown">Urunler</a>
                    <div class="dropdown-menu m-0">

                        @foreach (var item in deneme.Category)
                        {
                            <ul>
                                <li style="list-style-type:none"><a asp-controller="Product" asp-action="Index" asp-route-name="@GeneralTools.GetUrl(item.Title)" asp-route-id="@item.ID" style="color:black">@item.Title</a></li>
                            </ul>
                          
                        }
                     
                    </div>
                </div>


                <a href="/sepet" class="nav-item nav-link shopping-card">Sepetim<span>0</span></a>

                <a asp-controller="Contact" asp-action="Index" class="nav-item nav-link @(ViewBag.menuindex == 4 ? "active" : "")">Iletisim</a>
               
              <div id="group">
                    <ul class="nav">
                        <li class="nav-item">

                        </li>
                        <li class="nav-item">
                            <a asp-controller="home" asp-action="index" asp-area="Admin" class="btn btn-outline-success px-3">Giriş Yap</a>
                        </li>
                    </ul>
                 
                </div>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->
    
    @RenderBody()
    <!-- Footer Start -->
    <div class="container-fluid bg-light mt-5 py-5">
        <div class="container pt-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase border-start border-5 border-success ps-3 mb-4">Iletişim İçin</h5>
                    <p class="mb-2"><i class="bi bi-geo-alt text-success me-2"></i>123 Sokak, Ataşehir, Istanbul</p>
                    <p class="mb-2"><i class="bi bi-envelope-open text-success me-2"></i>info@example.com</p>
                    <p class="mb-0"><i class="bi bi-telephone text-success me-2"></i>+012 345 67890</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase border-start border-5 border-success ps-3 mb-4">Quick Links</h5>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-body mb-2" href="#"><i class="bi bi-arrow-right text-success me-2"></i>Home</a>
                        <a class="text-body mb-2" href="#"><i class="bi bi-arrow-right text-success me-2"></i>About Us</a>
                        <a class="text-body mb-2" href="#"><i class="bi bi-arrow-right text-success me-2"></i>Our Services</a>
                        <a class="text-body mb-2" href="#"><i class="bi bi-arrow-right text-success me-2"></i>Meet The Team</a>
                        <a class="text-body mb-2" href="#"><i class="bi bi-arrow-right text-success me-2"></i>Latest Blog</a>
                        <a class="text-body" href="#"><i class="bi bi-arrow-right text-success me-2"></i>Contact Us</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase border-start border-5 border-success ps-3 mb-4">Popular Links</h5>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-body mb-2" href="#"><i class="bi bi-arrow-right text-success me-2"></i>Home</a>
                        <a class="text-body mb-2" href="#"><i class="bi bi-arrow-right text-success me-2"></i>About Us</a>
                        <a class="text-body mb-2" href="#"><i class="bi bi-arrow-right text-success me-2"></i>Our Services</a>
                        <a class="text-body mb-2" href="#"><i class="bi bi-arrow-right text-success me-2"></i>Meet The Team</a>
                        <a class="text-body mb-2" href="#"><i class="bi bi-arrow-right text-success me-2"></i>Latest Blog</a>
                        <a class="text-body" href="#"><i class="bi bi-arrow-right text-success me-2"></i>Contact Us</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase border-start border-5 border-success ps-3 mb-4">Newsletter</h5>
                    <form action="">
                        <div class="input-group">
                            <input type="text" class="form-control p-3" placeholder="Your Email">
                            <button class="btn btn-success">Sign Up</button>
                        </div>
                    </form>
                    <h6 class="text-uppercase mt-4 mb-3">Follow Us</h6>
                    <div class="d-flex">
                        <a class="btn btn-outline-success btn-square me-2" href="#"><i class="bi bi-twitter"></i></a>
                        <a class="btn btn-outline-success btn-square me-2" href="#"><i class="bi bi-facebook"></i></a>
                        <a class="btn btn-outline-success btn-square me-2" href="#"><i class="bi bi-linkedin"></i></a>
                        <a class="btn btn-outline-success btn-square" href="#"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
                <div class="col-12 text-center text-body">
                    <a class="text-body" href="">Terms & Conditions</a>
                    <span class="mx-1">|</span>
                    <a class="text-body" href="">Privacy Policy</a>
                    <span class="mx-1">|</span>
                    <a class="text-body" href="">Customer Support</a>
                    <span class="mx-1">|</span>
                    <a class="text-body" href="">Payments</a>
                    <span class="mx-1">|</span>
                    <a class="text-body" href="">Help</a>
                    <span class="mx-1">|</span>
                    <a class="text-body" href="">FAQs</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-dark text-white-50 py-4">
        <div class="container">
            <div class="row g-5">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-md-0">&copy; <a class="text-white" href="#">Your Site Name</a>. All Rights Reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-0">Designed by <a class="text-white" href="https://htmlcodex.com">HTML Codex</a></p>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-success py-3 fs-4 back-to-top"><i class="bi bi-arrow-up"></i></a>


